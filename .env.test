# define your env variables for the test env here
KERNEL_CLASS='App\Kernel'
APP_SECRET='$ecretf0rt3st'

# Prevent any real email being sent during tests
MAILER_DSN='null://null'
MAIL_FROM_ADDRESS='no-reply@example.test'
MAIL_FROM_NAME='Test'
MAIL_TO_ADDRESS='owner@example.test'
MAIL_TO_NAME='Owner'

# Use file-based SQLite for tests so schema persists across kernel boots
# This is needed for integration tests that boot the kernel multiple times
DATABASE_URL="sqlite:///file:memdb1?mode=memory&cache=shared"

###> symfony/lock ###
LOCK_DSN=flock
